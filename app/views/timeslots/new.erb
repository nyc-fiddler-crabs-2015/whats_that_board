<div class="container">
   <div class="header"> Create a Session: </div>
  <form action="/timeslots/new" method="post">
   <select value="time">
    <% ["10 AM", "11 AM", "12 PM", "1 PM", "2 PM", "3 PM", "4 PM", "5 PM"].each do |time| %>
      <option id="<%= time %>"><%= time %></option>
    <% end %>

  </select>
  <input type="hidden" name="student_id" value="<% session[:user_id] %>">
  <select value="topic_id">
    <% @topics.each do |topic| %>
    <option id="<%= topic.title %>"><%= topic.title %></option>

    <% end %>
  </select>
  <input type="submit" value="submit" class="btn"/>
</form>
</div>

